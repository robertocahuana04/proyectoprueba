<p id="notice"> <%= notice%></p>

<h1 class="text-center , fs-1">listado de compras</h1>

<section class="row">
  <div class="container">
    <%= link_to 'Editar', edit_compra_path(@compra), class: 'btn btn-primary' %>
    <%= link_to 'Atras', compras_path, class: 'btn btn-primary' %>
  </div>
  <aside class="col-xs-6">
    <dl class="well well-sm , tab-content">
        <dt>codigo_producto:</dt>
        <dd><%= @compra.codigo_producto%></dd>
        <dt>nombre_del_cliente:</dt>
        <dd><%= @compra.nombre_del_cliente%></dd>
        <dt>identificacion_del_cliente:</dt>
        <dd><%= @compra.identificacion_del_cliente%></dd>
        <dt>fecha_de_compra:</dt>
        <dd><%= @compra.fecha_de_compra%></dd>
        <dt>tipo_producto:</dt>
        <dd><%= @compra.tipo_producto%></dd>
        <dt>forma_de_pago:</dt>
        <dd><%= @compra.forma_de_pago%></dd>
    </dl>
  </aside>
</section>            