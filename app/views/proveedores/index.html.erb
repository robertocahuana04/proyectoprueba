<p class="text-center , fs-1">Listing proveedor</p>

<div class="container">
<%= link_to 'Crear proveedor', new_proveedor_path, class: 'btn btn-primary' %>
</div>

<div class="container">
  <table class = "table table-bordered table-striped" >
    <tr>
      <th>codigo</th>
      <th>nombre</th>
      <th>correoelectronico</th>
      <th>telefono</th>
      <th>direccion</th>
      <th>ciudad</th>
      <th>destinario</th>
      <th colspan="7">Accion</th>
    </tr>
  
    <% @proveedor.each do |proveedor| %>
      <tr>
        <td><%= proveedor.codigo %></td>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.correoelectronico %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.ciudad %></td>
        <td><%= proveedor.destinario %></td>
        <td><%= link_to 'Ver', proveedor_path(proveedor), class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(@proveedor), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Eliminar', proveedor_path(proveedor), :method => :destroy,
        :confirm => 'Are you sure?', :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </table>
</div>
