<p id="notice"><%= flash[:notice] %></p>
<h1 class="text-center , fs-1">Listing proveedor</h1>

<div id="user_nav">
  <% if user_signed_in? %>
      Signed in as <%= current_user.email %>. Not you?
      <%= link_to "Sign out", destroy_user_session_path %>
    <% else %>
      <%= link_to "Registro", new_user_registration_path %> or
      <%= link_to "Inicia Sesion", new_user_session_path %>
 <% end %>
</div>

<div>
  <%= link_to 'Crear proveedor', new_proveedor_path, class: 'btn btn-primary' %>
</div>



<div>
  <table class = "table table-bordered table-striped" >
    <tr>
      <th>codigo</th>
      <th>nombre</th>
      <th>correoelectronico</th>
      <th>telefono</th>
      <th>direccion</th>
      <th>ciudad</th>
      <th>destinario</th>
      <th colspan="7">Accion</th>
    </tr>
  
    <% @proveedor.each do |proveedor| %>
      <tr>
        <td><%= proveedor.codigo %></td>
        <td><%= proveedor.nombre %></td>
        <td><%= proveedor.correoelectronico %></td>
        <td><%= proveedor.telefono %></td>
        <td><%= proveedor.direccion %></td>
        <td><%= proveedor.ciudad %></td>
        <td><%= proveedor.destinario %></td>
        <td><%= link_to 'Ver', proveedor , class: 'btn btn-outline-success' %></td>
        <td><%= link_to 'Editar', edit_proveedor_path(proveedor.id), class: 'btn btn-outline-primary' %></td>
        <td><%= link_to 'Destroy', proveedor_path(proveedor),
        method: :delete, data: { confirm: 'Estas seguro?' }, :class => 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </table>
</div>
