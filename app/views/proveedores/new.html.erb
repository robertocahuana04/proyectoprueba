
  
  <p class="text-center , fs-1">Registro de proveedor</p>

  <div class="container">
      <div class="row">
          <%= simple_form_for @proveedor do |f| %>
              <%= f.input :codigo %>
              <%= f.input :nombre %>
              <%= f.input :correoelectronico %>
              <%= f.input :telefono %>
              <%= f.input :direccion %>
              <%= f.input :ciudad %>
              <%= f.input :destinario %>
              <label for="Tipo">Tipo de cuenta:</label>
                <select name="" id="Tipo">
                    <option value="ahorros">Ahorros</option>
                    <option value="corriente">Corriente</option>
                </select>
              <%= f.button :submit %>
          <% end %>
      </div>
  </div>