<h1 class="text-center , fs-1">Listing productos</h1>

<div>
<%= link_to 'Crear producto', new_producto_path, class: 'btn btn-primary' %>
<%= link_to "landing", root_path, class: 'btn btn-primary' %>
</div>


<table class = "table table-bordered table-striped">
  <tr>
    <th>codigo</th>
    <th>nombre</th>
    <th>referencia</th>
    <th>stock</th>
    <th>remitente</th>
    <th>tipo</th>
    <th colspan="6">Accion</th>
  </tr>

  <% @producto.each do |producto| %>
    <tr>
      <td><%= producto.codigo %></td>
      <td><%= producto.nombre %></td>
      <td><%= producto.referencia%></td>
      <td><%= producto.stock%></td>
      <td><%= producto.remitente %></td>
      <td><%= producto.tipo %></td>
      <td><%= link_to 'Ver', producto_path(producto), class:"btn btn-success" %></td>
      <td><%= link_to 'Editar', edit_producto_path(@producto), class:'btn btn-primary' %></td>
      <td><%= link_to 'Eliminar', producto_path(producto),
      method: :delete, data: { confirm: 'Estas seguro?' }, :class =>"btn btn-danger" %></td>
    </tr>
  <% end %>
</table>





